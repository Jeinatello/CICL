// ==========================================================
//  RENDER ENGINE WITH MULTIPLE CHARACTERS + TRANSITIONS
// ==========================================================

function show(scene) {
    previousScene = previousScene === scene ? previousScene : scene; // store previous for back
    let s = scenes[scene];

    // Dialogue
    let nameBox = document.getElementById("name");
    let textBox = document.getElementById("text");
    let choicesDiv = document.getElementById("choices");
    let extraDiv = document.getElementById("extra-buttons");

    // Fade out old
    document.getElementById("dialogue-box").style.opacity = 0;
    setTimeout(() => {
        nameBox.innerText = s.name;
        textBox.innerText = s.text;
        choicesDiv.innerHTML = "";

        // Choices buttons
        if(s.choices) s.choices.forEach(choice => {
            let btn = document.createElement("div");
            btn.className = "choice";
            btn.innerText = choice.text;
            btn.onclick = () => show(choice.next);
            choicesDiv.appendChild(btn);
        });

        // Extra buttons: Back
        extraDiv.innerHTML = "";
        if(previousScene && previousScene !== scene) {
            let backBtn = document.createElement("div");
            backBtn.className = "extra-btn";
            backBtn.innerText = "Back";
            backBtn.onclick = () => show(previousScene);
            extraDiv.appendChild(backBtn);
        }

        document.getElementById("dialogue-box").style.opacity = 1;
    }, 300);

    // Background
    document.getElementById("game-container").style.backgroundImage = `url(${s.bg})`;

    // Characters
    let charsContainer = document.getElementById("characters-container");
    charsContainer.innerHTML = "";
    if(s.char){
        s.char.forEach((imgSrc, i) => {
            let img = document.createElement("img");
            img.src = imgSrc;
            img.className = "character-img";
            img.style.left = `${20 + i*200}px`; // spacing for multiple characters
            img.style.opacity = 0;
            charsContainer.appendChild(img);
            setTimeout(()=>{ img.style.opacity = 1; }, 100); // fade-in
        });
    }
}

show("start");

</script>
